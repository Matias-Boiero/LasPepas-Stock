@using LasPepas.Entidades.Enums
@using LasPepas.Enums
@model LasPepas.Entidades.Dtos.PrendaCreacionDTO

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ms-4 me-4 mb-5">
    <h2 class="text-success fw-bolder mb-3">--Administrar venta--</h2>
    <form asp-action="Editar">
        <div class="row col-md-12">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="Codigo" class="fw-bold mb-1">Código</label>
                    <input disabled asp-for="Codigo" placeholder="Código" class="form-control" />
                    <input type="hidden" asp-for="Codigo" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="FechaCreacion" type="hidden" class="fw-bold mb-1">Fecha de registro</label>
                    <input disabled asp-for="FechaCreacion" placeholder="Fecha de creación" class="form-control" />
                    <input type="hidden" asp-for="FechaCreacion" />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Marca" class="fw-bold mb-1">Marca</label>
                    @Html.DropDownList("Marca", Html.GetEnumSelectList<Marca>(), "--Seleccionar marca--", new { @class = "form-control" })
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="TipoPrenda" class="fw-bold mb-1">Tipo de prenda</label>
                    @Html.DropDownList("TipoPrenda", Html.GetEnumSelectList<TipoPrenda>(), "--Seleccionar Tipo de prenda--", new { @class = "form-control" })
                    <span asp-validation-for="TipoPrenda" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Temporada" class="fw-bold mb-1">Temporada</label>
                    @Html.DropDownList("Temporada", Html.GetEnumSelectList<Temporada>(), "--Seleccionar temporada-", new { @class = "form-control" })
                    <span asp-validation-for="Temporada" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Descripción" class="fw-bold mb-1">Descripción</label>
                    <input asp-for="Descripción" placeholder="Descripción del articulo" class="form-control" />
                    <span asp-validation-for="Descripción" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Talle" class="fw-bold mb-1">Talle</label>
                    <input asp-for="Talle" placeholder="Talle" class="form-control" />
                    <span asp-validation-for="Talle" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Observaciones" class="fw-bold mb-1">Observaciones</label>
                    <input asp-for="Observaciones" placeholder="Observaciones" class="form-control" />
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">


                <div class="form-group mb-2">
                    <label asp-for="Precio" class="fw-bold mb-1">Precio</label>
                    <input asp-for="Precio" placeholder="Precio" class="form-control" />
                    <input type="hidden" asp-for="Precio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="VentaContado" class="fw-bold mb-1">Venta al contado</label>
                    <input asp-for="VentaContado" placeholder="Pago al contado/débito" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VentaTarjeta" class="fw-bold mb-1">Venta con tarjeta de crédito</label>
                    <input asp-for="VentaTarjeta" placeholder="Pago con tarjeta de crédito" class="form-control" />
                </div>
                <div class="form-check">
                    <label class="form-check-lavel">
                        <input class="form-check-input" type="checkbox" asp-for="VentaCtaCorriente"> Cuenta corriente
                    </label>
                </div>
                <div class="form-check mb-3">
                    <label class="form-check-lavel">
                        <input class="form-check-input" type="checkbox" asp-for="Condicional"> Condicional
                    </label>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="FechaVenta" class="fw-bold mb-1">Fecha de la venta</label>
                    @Html.TextBoxFor(m => m.FechaVenta, "dd/MM/yy", new { @type = "datetime-local", @class = "form-control" })
                    <input type="hidden" asp-for="FechaVenta" />
                    <span asp-validation-for="FechaVenta" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Vendedor" class="fw-bold mb-1">Vendedora</label>
                    @Html.DropDownList("Vendedor", Html.GetEnumSelectList<Vendedor>(), "--Seleccionar vendedora-", new { @class = "form-control" })
                    @* <span asp-validation-for="Vendedor" class="text-danger"></span>*@
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Cliente" class="fw-bold mb-1 text-primary">--Nombre y apellido del cliente--</label>
                    <input asp-for="Cliente" placeholder="Nombre del cliente/a" class="form-control" />
                    <span asp-validation-for="Cliente" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-4  offset-0">
                    @if (Model.Disponible is true)
                    {
                        <label class="form-check-label">
                            <input class="form-check-input bg-success " asp-for="Disponible" /> (Quitar el check para efectuar la venta)
                        </label>
                    }
                    else
                    {
                        <label class="form-check-label">
                            <input class="form-check-input bg-danger" asp-for="Disponible" /> Articulo entregado al cliente (En caso de devolución activar el check)
                        </label>
                    }
                </div>
            </div>
            <div class="form-group mt-2 d-grid gap-2 col-md-8 mb-2">
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-cart-shopping"></i>&nbspRealizar la venta</button>
            </div>
        </div>

    </form>


    <div class="mb-2">
        <a asp-action="Index">Regresar</a>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script type="text/javascript">

     $.validator.methods.number = function (value, element) {
        value = floatValue(value);
        return this.optional(element) || !isNaN(value);
    }
    $.validator.methods.range = function (value, element, param) {
        value = floatValue(value);
        return this.optional(element) || (value >= param[0] && value <= param[1]);
    }

    function floatValue(value) {
        return parseFloat(value.replace(",", "."));

     //Restringir fechas pasadas
    $(function(){
        var dtToday = new Date();

        var month = dtToday.getMonth() + 1;
        var day = dtToday.getDate();
        var year = dtToday.getFullYear();
        if(month < 10)
            month = '0' + month.toString();
        if(day < 10)
            day = '0' + day.toString();

        var minDate= year + '-' + month + '-' + day;

        $('#Fecha').attr('min', minDate);
    });


    }
</script>